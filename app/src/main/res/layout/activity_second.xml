<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".SecondActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_open_activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="@color/black"
        android:padding="15dp"
        android:text="Open activity main"
        app:cornerRadius="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#2DB50F"
        app:strokeWidth="3dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/black"
        android:padding="15dp"
        android:text="Web"
        app:cornerRadius="50dp"
        app:layout_constraintTop_toBottomOf="@id/btn_open_activity_main"
        app:strokeColor="#2DB50F"
        app:strokeWidth="3dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/black"
        android:padding="15dp"
        android:text="Number"
        app:cornerRadius="50dp"
        app:layout_constraintTop_toBottomOf="@id/btn_web"
        app:strokeColor="#2DB50F"
        app:strokeWidth="3dp" />

    <EditText
        android:id="@+id/btn_input_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_pass"
        android:gravity="center"
        android:hint="Введите текст"
        android:padding="15dp"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/im_gallery"
        tools:src="@tools:sample/avatars"
        app:layout_constraintTop_toBottomOf="@id/btn_number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp" />


</androidx.constraintlayout.widget.ConstraintLayout>